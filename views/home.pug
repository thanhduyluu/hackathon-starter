extends layout

block content
  h1 Hackathon Starter
  p.lead A boilerplate for Node.js web applications.
  hr
  .row
    h2 Latest Blogs
    each blog, index in blogs
      if index % 2 === 0
        .row
      .col-md-6
        .card.mb-3
          .card-body
            h2.card-title= blog.title
            p.card-text= blog.content.substring(0, 100) + '...'
            p
              a.btn.btn-primary(href=`/blogs/${blog._id}`, role='button') View details Â»
    a.btn.btn-primary(href='/blogs') View All Blogs