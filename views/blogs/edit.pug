extends ../layout

block content
  h1 Edit Blog
  .card
    .card-body
      form(action=`/blogs/${blog._id}/edit`, method='POST')
        input(type='hidden', name='_csrf', value=_csrf)
        .mb-3
          label(for='title', class='form-label') Title
          input(type='text', name='title', class='form-control', value=blog.title, required)
        .mb-3
          label(for='content', class='form-label') Content
          textarea(name='content', class='form-control', rows='5', required)= blog.content
        .mb-3
          label(for='author', class='form-label') Author
          input(type='text', name='author', class='form-control', value=blog.author, required)
        button(type='submit', class='btn btn-primary') Update
  a.btn.btn-secondary.mt-3(href=`/blogs/${blog._id}`) Back to Blog Details